{
    "compilerOptions": {
         "module": "nodenext",
         "target": "ES2018",
         "lib": ["DOM","ES2020"],
        "moduleResolution": "nodenext",
        "importHelpers": true,
        "incremental": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "pretty": true,
        "inlineSources": true,

        "types": [
            "node",
            "@wdio/globals/types",
            "@types/mocha",
            "@wdio/mocha-framework",
            "webdriverio"
        ],
    }
}